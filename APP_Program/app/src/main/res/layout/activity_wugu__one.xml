<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.user.myapplication_pethospital.Wugu_One"
    app:layout_constraintTop_toTopOf="@+id/linearLayout"
    tools:layout_editor_absoluteX="0dp"
    android:layout_marginTop="0dp">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="368dp"
        android:layout_height="468dp"
        android:orientation="vertical"
        android:weightSum="1"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="21dp">

        <TextView
            android:id="@+id/textView_W_One"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2.47"
            android:text="@string/textView_W_One" />

        <LinearLayout
            android:layout_width="361dp"
            android:layout_height="304dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button_return_W"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/button_return_W" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/textView1111" />

            <Button
                android:id="@+id/button_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/button_comment_w" />

        </LinearLayout>

    </LinearLayout>
</android.support.constraint.ConstraintLayout>
